                                        </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.User != null)
                                            {
                                                int i=1;
                                            


                                            @foreach (var item in ViewBag.User)
                                            {
                                                    <tr>
                                                        <td>@i</td>
                                                        <td class="digits">@item.Fullname</td>
                                                        <td class="font-danger"> @item.Phone 	</td>
                                                        <td class="digits"> 
                                                            @item.Tarikh
                                                        </td>
                                                        <td class="digits"> 
