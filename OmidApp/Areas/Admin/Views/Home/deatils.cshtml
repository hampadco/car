                                                            {
                                                                <p class="alert alert-success form-control text-center" dir="ltr">@item.Rate</p>
                                                                
                                                            }
                                                            else
                                                            {
                                                                <p class="alert alert-danger form-control text-center" dir="ltr">@item.Rate</p>
                                                            }
                                                           
                                                        </td>
                                                   
                                                    </tr>
                                                     i++;
