                            <div class="card-body">
                                <div class="user-status table-responsive latest-order-table">
                                      <table class="table table-bordernone">
                        <thead>

                            <tr>
                                <td scope="col">ردیف</td>
                                <td scope="col">نام و نام خانوادگی</td>
                                <td scope="col">نام تعمیرگاه </td>
                                <td scope="col">شماره تماس</td>
                                <td scope="col">رمز عبور</td>
                                <td scope="col">شاخصه سرویس رایگان</td>
                                <td scope="col">سفارشات</td>
                                
                              
                               </tr>
                           

                        </thead>
                        <tbody>
                            @if(ViewBag.User != null){
                                int i = 1;
                             @foreach (var item in ViewBag.User)
                            {
                                <tr>
                                <td>@i</td>
                                <td class="font-danger">@item.FirstAndLastName </td>
                                <td class="font-danger">@item.Url </td>
                                <td class="digits"> @item.Phone</td>
                                  <td class="digits"> @item.Email</td>

                                <td class="font-danger"> 

                                @if(@item.free==0)
                                {
                                   <a href="/admin/home/set?Id=@item.Id" class="alert alert-primary"> 5  | ست کردن شاخصه جدید</a>
                                }
                                else
                                {
                                   <a href="/admin/home/set?Id=@item.Id" class="alert alert-primary"> @item.free  | ست کردن شاخصه جدید</a>

                                }
                                
                                
                                </td>
                                <td class="font-danger">
                                    <a href="/admin/home/deatils/@item.Id" class="btn btn-warning form-control">مشاهده سفارشات</a>
                                </td>
                                
                               
                            </tr>
                                i++;
                             }
                            }
                           
                         
                        </tbody>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
