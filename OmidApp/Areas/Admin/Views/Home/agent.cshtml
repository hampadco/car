                            <div class="card-body">
                                <div class="user-status table-responsive latest-order-table">
                                      <table class="table table-bordernone">
                        <thead>

                            <tr>
                                <td scope="col">ردیف</td>
                                <td scope="col">نام و نام خانوادگی</td>
                                <td scope="col">شماره تماس</td>
                                <td scope="col">کیف پول</td>
                                <td scope="col">جزئیات مسابقه</td>
                                <td scope="col">تبدیل به نماینده</td>
                               </tr>
                           

                        </thead>
                        <tbody>
                            @if(ViewBag.User != null){
                                int i = 1;
                             @foreach (var item in ViewBag.User)
                            {
                                <tr>
                                <td>@i</td>
                                <td class="font-danger">@item.FirstAndLastName </td>
                                <td class="digits"> @item.Phone</td>
                                <td class="font-danger"> <a href="/admin/home/walet?phone=@item.Phone" class="btn btn-danger"> مشاهده و شارژ کیف پول</a>
                                </td>
                                <td class="font-danger">
                                    <a href="/admin/home/deatils/@item.Id" class="btn btn-warning">امتیاز مسابقات</a>
                                </td>
                                <td class="font-danger">
                                     @if (item.Cart == "agent")
                                                            {
                                                                <a href="/admin/home/agentinfo/@item.Id" class="btn btn-success form-control">
                                                                             <span >نماینده</span>

                                                                </a>
                                                            }
                                                            else
                                                            {
                                                                <a href="/admin/home/agentinfo/@item.Id" class="btn btn-danger form-control">
                                                                <span >کاربر عادی</span>
                                                                </a>
                                                            }
                                </td>

                              


                            </tr>
                                i++;
                             }
                            }
                           
                         
                        </tbody>

