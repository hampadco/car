 @model Admin

<style>
    th, td, tr {
        padding: 5px;
        text-align: center !important;
    }
    div{
        text-align: right !important;
    }
</style>
        <div class="page-body">

            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>داشبورد
                                    <small>پنل مدیریت چندکاره</small>
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="index.html"><i data-feather="home"></i></a></li>
                                <li class="breadcrumb-item active">داشبورد</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>


             @if (TempData["msg"] != null)
             {
                <p class="alert alert-danger p-3 form-control">@TempData["msg"]</p>
             }





                 
                    <div class="col-xl-12 xl-100">
                        
                        <div class="card p-5">
                           

                             <h4 class="alert alert-secondary mb-5">افزودن کاربر جدید</h4>

                        <form asp-action="AddAdmin" method="post" class="row" >

                           <div class="col-xl-6 col-md-6 col-lg-6 col-12"> 
                            <div class="form-group">
                                <label asp-for="NameFamily">نام و نام خانوادگی</label>
                                <input asp-for="NameFamily" class="form-control" required />
                            </div>
                           </div> 
                            <div class="col-xl-6 col-md-6 col-lg-6 col-12"> 
                            <div class="form-group">
                                <label asp-for="PhoneNumber">شماره تماس</label>
                                <input asp-for="PhoneNumber" class="form-control" required />
                            </div>
                            </div>
                              <div class="col-xl-6 col-md-6 col-lg-6 col-12"> 
                            <div class="form-group">
                                <label asp-for="UserName">نام کاربری</label>
                                <input asp-for="UserName" class="form-control" required />
                            </div>
                            </div>
                              <div class="col-xl-6 col-md-6 col-lg-6 col-12"> 
                            <div class="form-group">
                                <label asp-for="Password">رمز عبور</label>
                                <input asp-for="Password" type="password" class="form-control" required />
                            </div>
                            </div>
                              <div class="col-xl-6 col-md-6 col-lg-6 col-12"> 
                            <button type="submit" class="btn btn-primary form-control">ثبت</button>
                            </div>
                        </form>
                                                

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- Container-fluid Ends-->

        </div>

  